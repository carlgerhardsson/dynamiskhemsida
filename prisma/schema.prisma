model Comment {
  id        Int      @id @default(autoincrement())
  namn      String
  text      String
  createdAt DateTime @default(now())
}
model MailUtskick {
  id        Int      @id @default(autoincrement())
  namn      String
  email     String
  createdAt DateTime @default(now())
}
