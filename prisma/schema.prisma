generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model IntresseAnmalan {
  id        Int      @id @default(autoincrement())
  namn      String
  email     String
  telefon   String?
  meddelande String?
  dates     String?  // Komma-separerade datum (YYYY-MM-DD)
  createdAt DateTime @default(now())
}
